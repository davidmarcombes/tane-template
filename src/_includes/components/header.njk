<header class="border-b bg-white dark:bg-slate-800">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/assets/images/logo.jpg" alt="{{ site.title }} logo" class="h-8 w-auto" />
      <span class="font-semibold">{{ site.title }}</span>
    </a>
    <nav class="space-x-4">
      {% for item in navigation[lang or 'en'] %}
        <a href="{{ item.url }}" class="text-sm">{{ item.text }}</a>
      {% endfor %}
    </nav>
  </div>
</header>
