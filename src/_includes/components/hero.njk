<section class="py-12">
  <div class="text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold">{{ title or site.title }}</h1>
    <p class="mt-4 text-lg text-slate-600">{{ description or site.description }}</p>
    {% if cta_url and cta_text %}
    <div class="mt-6">
      <a href="{{ cta_url }}" class="inline-block bg-primary-500 text-white px-6 py-2 rounded">{{ cta_text }}</a>
    </div>
    {% endif %}
  </div>
</section>
